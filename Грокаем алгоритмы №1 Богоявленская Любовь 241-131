Лабораторная работа 1

1)
#include <iostream>
#include <cstdlib>  
#include <ctime>    

using namespace std;


void selectionSortAsc(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIdx = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIdx]) {
                minIdx = j;
            }
        }
        int temp = arr[i];      
        arr[i] = arr[minIdx];   
        arr[minIdx] = temp;    
    }
}

int main() {
    srand(time(0));

    const int SIZE = 10;

    int arr[SIZE];

    cout << "Заполняем массив случайными числами от 2 до 103:" << endl;
    for (int i = 0; i < SIZE; i++) {
        arr[i] = rand() % 102 + 2;
        cout << "arr[" << i << "] = " << arr[i] << endl;
    }

    cout << "\nИсходный массив:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    int sortedArr[SIZE];
    for (int i = 0; i < SIZE; i++) {
        sortedArr[i] = arr[i];  
    }

    selectionSortAsc(sortedArr, SIZE);

    cout << "\nОтсортированный массив по возрастанию:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << sortedArr[i] << " ";
    }
    cout << endl;

    return 0; 
}

 2)

#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

void selectionSortDesc(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int maxIdx = i;
        for (int j = i + 1; j < n; j++) {
            if (arr[j] > arr[maxIdx]) {
                maxIdx = j;  
            }
        }
        
        int temp = arr[i];     
        arr[i] = arr[maxIdx];  
        arr[maxIdx] = temp;    
    }
}

int main() {
    srand(time(0));
    
    const int SIZE = 10;
    int arr[SIZE];
    
    cout << "Заполняем массив случайными числами от 0 до 100:" << endl;
    for (int i = 0; i < SIZE; i++) {
        // rand() % 101 дает числа от 0 до 100
        arr[i] = rand() % 101;
        cout << "arr[" << i << "] = " << arr[i] << endl;
    }
    
    cout << "\nИсходный массив:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    int sortedArr[SIZE];
    for (int i = 0; i < SIZE; i++) {
        sortedArr[i] = arr[i];  
    }
    
    selectionSortDesc(sortedArr, SIZE);
    
    cout << "\nОтсортированный массив по убыванию:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << sortedArr[i] << " ";
    }
    cout << endl;
    
    return 0;
}

3)

#include <iostream>
#include <string> 

using namespace std;
void selectionSortPhones(string phones[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIdx = i;
        
        for (int j = i + 1; j < n; j++) {
            if (phones[j] < phones[minIdx]) {
                minIdx = j;  
            }
        }
        
        string temp = phones[i];      
        phones[i] = phones[minIdx];   
        phones[minIdx] = temp;         
}

int main() {
    const int SIZE = 10;
    
    string phones[SIZE] = {
        "23-45-67",  // Телефон 1
        "12-34-56",  // Телефон 2
        "89-01-23",  // Телефон 3
        "45-67-89",  // Телефон 4
        "34-56-78",  // Телефон 5
        "67-89-01",  // Телефон 6
        "56-78-90",  // Телефон 7
        "78-90-12",  // Телефон 8
        "90-12-34",  // Телефон 9
        "01-23-45"   // Телефон 10
    };
    
    cout << "Исходный список телефонов:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << i + 1 << ". " << phones[i] << endl;
    }
    
    string sortedPhones[SIZE];
    for (int i = 0; i < SIZE; i++) {
        sortedPhones[i] = phones[i];  
    }
    
    selectionSortPhones(sortedPhones, SIZE);
    
    cout << "\nОтсортированный список телефонов по возрастанию:" << endl;
    for (int i = 0; i < SIZE; i++) {
        cout << i + 1 << ". " << sortedPhones[i] << endl;
    }

    cout << "\nПояснение: сравнение телефонов происходит посимвольно," << endl;
    cout << "слева направо, как при сортировке слов в словаре." << endl;
    cout << "Например, '01-23-45' < '12-34-56', потому что '0' < '1'" << endl;
    
    return 0;
}
 
