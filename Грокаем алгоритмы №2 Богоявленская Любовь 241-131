Лабораторная работа 2
1)
#include <iostream>
using namespace std;

void printNumbers(int n) {
    if (n == 0) {
        return;
    }
    
    printNumbers(n - 1);
    cout << n << " ";
}

int main() {
    int n;
    cout << "Введите натуральное число n: ";
    cin >> n;
    
    cout << "Числа от 1 до " << n << ": ";
    printNumbers(n);
    cout << endl;
    
    return 0;
}

2)

#include <iostream>
using namespace std;
void printAscending(int a, int b) {
    if (a > b) {
        return;
    }
    
    cout << a << " ";
    
    printAscending(a + 1, b);
}

void printDescending(int a, int b) {
    if (a < b) {
        return;
    }
    
    cout << a << " ";
    
    printDescending(a - 1, b);
}

int main() {
    int A, B;
    cout << "Введите число A: ";
    cin >> A;
    cout << "Введите число B: ";
    cin >> B;
    
    cout << "Числа от " << A << " до " << B << ": ";
    
    if (A < B) {
        printAscending(A, B);
    } else {
        printDescending(A, B);
    }
    
    cout << endl;
    return 0;
}

3)

#include <iostream>
using namespace std;

int sumOfDigits(int n) {
    if (n < 10) {
        return n;
    }
    
    return (n % 10) + sumOfDigits(n / 10);
}

int main() {
    int N;
    cout << "Введите натуральное число N: ";
    cin >> N;
    
    cout << "Сумма цифр числа " << N << " = " << sumOfDigits(N) << endl;
    
    return 0;
}

4)

#include <iostream>
#include <cmath>
using namespace std;

bool isPrime(int n, int i = 2) {
    if (n <= 2) {
        return (n == 2);
    }
    if (n % i == 0) {
        return false;
    }
    if (i * i > n) {
        return true;
    }
    
    return isPrime(n, i + 1);
}

void printPrimeDivisors(int n, int divisor = 2) {
    if (n == 1) {
        return;
    }
    
    if (divisor * divisor > n) {
        if (n > 1) {
            cout << n << " ";
        }
        return;
    }
    
    if (n % divisor == 0 && isPrime(divisor)) {
        cout << divisor << " ";
        
        while (n % divisor == 0) {
            n /= divisor;  
        }
    }
    
    printPrimeDivisors(n, divisor + 1);
}

int main() {
    int n;
    cout << "Введите натуральное число n > 1: ";
    cin >> n;
    
    if (n <= 1) {
        cout << "Число должно быть больше 1!" << endl;
        return 1;
    }
    
    cout << "Простые делители числа " << n << ": ";
    printPrimeDivisors(n);
    cout << endl;
    
    return 0;
}
