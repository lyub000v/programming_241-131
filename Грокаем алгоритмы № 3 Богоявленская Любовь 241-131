1)

#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;
int partition(int arr[], int low, int high) {
    int pivot = arr[high];
    
    int i = low - 1;
    
    for (int j = low; j < high; j++) {
        if (arr[j] <= pivot) {
            i++;  
            swap(arr[i], arr[j]); 
        }
    }
    
    swap(arr[i + 1], arr[high]);
    
    return i + 1;
}

void quickSort(int arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        
        quickSort(arr, low, pi - 1);   
        quickSort(arr, pi + 1, high);  
    }
}

int main() {
    const int SIZE = 1000;
    int arr[SIZE];
    
    srand(time(0));
    
    cout << "Заполнение массива из " << SIZE << " случайных чисел..." << endl;
    
    for (int i = 0; i < SIZE; i++) {
        arr[i] = rand() % 10000;  
    }
    
    cout << "Первые 10 элементов до сортировки: ";
    for (int i = 0; i < 10; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    quickSort(arr, 0, SIZE - 1);
    
    cout << "Первые 10 элементов после сортировки: ";
    for (int i = 0; i < 10; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    bool sorted = true;
    for (int i = 1; i < SIZE; i++) {
        if (arr[i] < arr[i - 1]) {
            sorted = false;
            break;
        }
    }
    
    if (sorted) {
        cout << "Массив успешно отсортирован!" << endl;
    } else {
        cout << "Ошибка при сортировке!" << endl;
    }
    
    return 0;
}

2)

#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int partition(int arr[], int low, int high) {
    int pivot = arr[high];
    int i = low - 1;
    
    for (int j = low; j < high; j++) {
        if (arr[j] <= pivot) {
            i++;
            swap(arr[i], arr[j]);
        }
    }
    
    swap(arr[i + 1], arr[high]);
    return i + 1;
}

void quickSort(int arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        quickSort(arr, low, pi - 1);
        quickSort(arr, pi + 1, high);
    }
}

void printArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    const int SIZE = 20;  
    
    srand(time(0));
    
    int arr[SIZE];
    for (int i = 0; i < SIZE; i++) {
        arr[i] = rand() % 51 + 50;
    }
    
    cout << "Исходный массив (числа от 50 до 100):" << endl;
    printArray(arr, SIZE);
    
    quickSort(arr, 0, SIZE - 1);
    
    cout << "\nОтсортированный массив по возрастанию:" << endl;
    printArray(arr, SIZE);
    
    cout << "\nПроверка диапазона чисел:" << endl;
    bool inRange = true;
    for (int i = 0; i < SIZE; i++) {
        if (arr[i] < 50 || arr[i] > 100) {
            inRange = false;
            cout << "Ошибка: " << arr[i] << " вне диапазона [50, 100]" << endl;
        }
    }
    
    if (inRange) {
        cout << "Все числа находятся в диапазоне [50, 100]" << endl;
    }
    
    return 0;
}

3)

#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

const int ROWS = 5;
const int COLS = 6;

void printMatrix(int matrix[ROWS][COLS]) {
    cout << "Двумерный массив:" << endl;
    for (int i = 0; i < ROWS; i++) {
        for (int j = 0; j < COLS; j++) {
            cout << matrix[i][j] << "\t";
        }
        cout << endl;
    }
    cout << endl;
}

int partitionColumn(int matrix[ROWS][COLS], int low, int high) {
    int pivot = matrix[high][0];
    int i = low - 1;
    
    for (int j = low; j < high; j++) {
        if (matrix[j][0] <= pivot) {
            i++;
            
            for (int col = 0; col < COLS; col++) {
                swap(matrix[i][col], matrix[j][col]);
            }
        }
    }
    
    for (int col = 0; col < COLS; col++) {
        swap(matrix[i + 1][col], matrix[high][col]);
    }
    
    return i + 1;
}

void quickSortColumn(int matrix[ROWS][COLS], int low, int high) {
    if (low < high) {
        int pi = partitionColumn(matrix, low, high);
        quickSortColumn(matrix, low, pi - 1);
        quickSortColumn(matrix, pi + 1, high);
    }
}

int main() {
    int matrix[ROWS][COLS];
    
    srand(time(0));
    
    for (int i = 0; i < ROWS; i++) {
        for (int j = 0; j < COLS; j++) {
            // rand() % 57 дает числа от 0 до 56
            // +5 сдвигает диапазон к 5..61
            matrix[i][j] = rand() % 57 + 5;
        }
    }
    
    cout << "Исходный массив:" << endl;
    printMatrix(matrix);
    
    cout << "Первый столбец до сортировки: ";
    for (int i = 0; i < ROWS; i++) {
        cout << matrix[i][0] << " ";
    }
    cout << endl << endl;
    
    quickSortColumn(matrix, 0, ROWS - 1);
    
    cout << "Массив после сортировки по первому столбцу:" << endl;
    printMatrix(matrix);
    
    cout << "Первый столбец после сортировки: ";
    for (int i = 0; i < ROWS; i++) {
        cout << matrix[i][0] << " ";
    }
    cout << endl;
    
    bool sorted = true;
    for (int i = 1; i < ROWS; i++) {
        if (matrix[i][0] < matrix[i - 1][0]) {
            sorted = false;
            break;
        }
    }
    
    if (sorted) {
        cout << "Первый столбец успешно отсортирован!" << endl;
    } else {
        cout << "Ошибка при сортировке первого столбца!" << endl;
    }
    
    return 0;
}

4)

#include <iostream>
#include <cstdlib>  
#include <cstring>  
#include <string>

using namespace std;

struct Student {
    string lastName;
    string firstName;
    string group;
    int year;
};

int compareStudents(const void* a, const void* b) {
    const Student* studentA = (const Student*)a;
    const Student* studentB = (const Student*)b;
    
    int lastNameCompare = studentA->lastName.compare(studentB->lastName);
    if (lastNameCompare != 0) {
        return lastNameCompare;  
    }
    
    return studentA->firstName.compare(studentB->firstName);
}

void printStudents(Student students[], int count) {
    cout << "Список студентов:" << endl;
    cout << "---------------------------------------------------" << endl;
    cout << "Фамилия\t\tИмя\t\tГруппа\tГод" << endl;
    cout << "---------------------------------------------------" << endl;
    
    for (int i = 0; i < count; i++) {
        cout << students[i].lastName << "\t\t"
             << students[i].firstName << "\t\t"
             << students[i].group << "\t"
             << students[i].year << endl;
    }
    cout << endl;
}

int main() {
    const int STUDENT_COUNT = 8;
    Student students[STUDENT_COUNT] = {
        {"Иванов", "Алексей", "ИВТ-201", 2},
        {"Петров", "Иван", "ИВТ-202", 1},
        {"Сидоров", "Петр", "ИВТ-201", 2},
        {"Иванов", "Дмитрий", "ИВТ-203", 3},
        {"Алексеев", "Андрей", "ИВТ-202", 1},
        {"Петров", "Алексей", "ИВТ-201", 2},
        {"Васильев", "Сергей", "ИВТ-203", 3},
        {"Андреев", "Иван", "ИВТ-202", 1}
    };
    
    cout << "Список студентов ДО сортировки:" << endl;
    printStudents(students, STUDENT_COUNT);
    
    qsort(students, STUDENT_COUNT, sizeof(Student), compareStudents);
    
    cout << "Список студентов ПОСЛЕ сортировки по алфавиту:" << endl;
    printStudents(students, STUDENT_COUNT);
    
    cout << "Порядок сортировки:" << endl;
    cout << "1. Сначала сравниваются фамилии (по алфавиту)" << endl;
    cout << "2. Если фамилии одинаковые, сравниваются имена" << endl;
    cout << "3. Группа и год не влияют на порядок сортировки" << endl;
    
    return 0;
}
